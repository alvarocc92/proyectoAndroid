<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_empleados"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bootstrap_gray_lighter"
    tools:context="com.example.accplinux.probandobackendless.MenuEmpleados">

    <com.beardedhen.androidbootstrap.BootstrapButton
        style="@style/wrapping_button"
        app:bootstrapBrand="primary"
        app:roundedCorners="true"
        app:showOutline="true"
        android:text="@string/newEmpleado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newEmpleado"
        android:layout_marginTop="112dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <com.beardedhen.androidbootstrap.BootstrapButton
        style="@style/wrapping_button"
        app:bootstrapBrand="danger"
        app:roundedCorners="true"
        app:showOutline="true"
        android:text="@string/listar_empleados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listarEmpleados"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/newEmpleado"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        style="@style/progress_weight_container">
        <com.beardedhen.androidbootstrap.BootstrapProgressBar
            android:id="@+id/barraInfo"
            style="@style/progress_example"
            app:animated="true"
            app:bootstrapBrand="info"
            app:bootstrapProgress="0"
            app:striped="true" />
    </LinearLayout>

</RelativeLayout>
